<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="eu.id2go.id2go.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/id2go_logo"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Logo"
                android:layout_toEndOf="@+id/Logo"
                android:layout_toRightOf="@+id/Logo"
                android:text="Developer \@ Your service!"
                android:textColor="#303F9F"
                android:textSize="18sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="ID2GO:"
                android:textSize="20sp"
                android:textColor="#303F9F"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="As independent software developers in The Netherlands,
our aim is to develop beautiful and practical Android applications that people want to work with.
Our philosophy is that the value of our software must lie herein that it facilitates your work and
that it empowers your clients.
Please, do not hesitate to contact us.
ID2GO at Your service!"/>

            </ScrollView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="12dp"
            android:text="Contact information"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="E-mail:"
                android:textColor="#303F9F"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@id2go.eu"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Phone:"
                android:textColor="#303F9F"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0650620159"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Address:"
                android:textColor="#303F9F"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/street_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rijksstraatweg 54"/>

                <TextView
                    android:id="@+id/pc_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8121 EE Olst"/>

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Netherlands"/>

            </LinearLayout>

        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Office Hours:"
                    android:textColor="#303F9F"/>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/monday"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Monday:"/>

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_below="@+id/monday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Tuesday:" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_below="@+id/tuesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Wednesday:" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_below="@+id/wednesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Thursday:" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_below="@+id/thursday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Friday:" />


                    <TextView
                        android:id="@+id/time_monday"
                        android:layout_toRightOf="@+id/monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00-12:00 13:00-17:00"/>

                    <TextView
                        android:id="@+id/time_tuesday"
                        android:layout_toRightOf="@+id/tuesday"
                        android:layout_below="@id/time_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00-12:00 13:00-17:00"/>


                    <TextView
                        android:id="@+id/time_wednesday"
                        android:layout_toRightOf="@+id/wednesday"
                        android:layout_below="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00-12:00"/>

                    <TextView
                        android:id="@+id/time_thursday"
                        android:layout_toRightOf="@+id/thursday"
                        android:layout_below="@+id/time_wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00-12:00 13:00-17:00"/>

                    <TextView
                        android:id="@+id/time_friday"
                        android:layout_toRightOf="@id/friday"
                        android:layout_below="@+id/time_thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00-12:00 13:00-17:00"/>

                </RelativeLayout>


                </ScrollView>

            </LinearLayout>


    </LinearLayout>

</ScrollView>